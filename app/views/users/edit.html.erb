<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<main>
  <div class="containar">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>User info</h1>
<%= form_with model: @user do |f| %>
  <div class="form-group"><label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName",placeholder:"名前"%></div>
  <div class="form-group"><label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
  <div class="form-group"><label for="inputIntroduction">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %></div>
  
  <%= f.submit "Update User" %>
  <% end %>
</div>
</div>
</div>
</main>





